<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.projettic.dao.UserDao">

    <resultMap type="com.crm.entity.User" id="userMap">
        <id property="iduser" column="iduser" />
        <result property="username" column="username" />
        <result property="userpassword" column="userpassword" />
        <result property="useremail" column="useremail" />
        <result property="userclass" column="userclass" />
    </resultMap>

    <!-- 此处select标签的id值对应Mapper类中方法名 -->
    <select id="getUserByName" parameterType="string">
        <!-- 此处写sql语句,#{Mapper类传入的参数} -->
        select * from t_user where username = #{username}
    </select>

    <!-- 此处select标签的id值对应Mapper类中方法名 -->
    <select id="getUserByEmail" parameterType="string">
        <!-- 此处写sql语句,#{Mapper类传入的参数} -->
        select * from t_user where useremail = #{useremail}
    </select>

    <!-- 此处select标签的id值对应Mapper类中方法名 -->
    <select id="getUserById" parameterType="integer">
        <!-- 此处写sql语句,#{Mapper类传入的参数} -->
        select * from t_user where iduser = #{iduser}
    </select>

</mapper>
